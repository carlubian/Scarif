<div class="w-full p-2 md:p-8 bg-yellow-600 text-white grid grid-cols-1 content-start justify-center">
    <h1 class="font-light text-2xl md:text-6xl">
        @Title
    </h1>
    <p class="font-semibold text-lg md:text-2xl mt-2">
        @Caption
    </p>
</div>

@code {
    [Parameter]
    public string Title { get; set; }
    [Parameter]
    public string Caption { get; set; }
}
